!!!
%html
  %head
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %title= content_for?(:title) ? yield(:title) : 'Borrowd'
    %meta{ name: 'description', content: "#{content_for?(:description) ? yield(:description) : 'Borrowd'}" }
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = include_gon init: true
    = csrf_meta_tags
  %body
    %header
      .container
        = render 'layouts/navigation'
        #header-region
    %main
      .container
        #main-region
        = yield
    %footer
